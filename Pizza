    /* The Add Button */
    private void BtnAddActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        
        /* If the user selects the small radio button it would display the item column "Small" */
        if(lblSmall.isSelected() == true) 
          {
          
               item = "Small";
               price = 5;
               
               
          }
        /* If the user selects the medium radio button it would display the item column "Medium" */
        else if(lblMedium.isSelected() == true) 
          {
          
               item = "Medium";
                price = 7;
               
          }
        /* If the user selects the large radio button it would display the item column "Large" */
        else if(lblLarge.isSelected() == true) 
          {
          
               item = "Large";
               price = 10;
               
          }
        /* If the user selects the x-large radio button it would display the item column "Extra Large" */
        else if(lblXLarge.isSelected() == true) 
          {
          
               item = "Extra Large";
               price = 15;
               
          }
         /* If the user checks the Extra Cheese it will display the topping column as "Extra Cheese" */
         if(ChkBoxExtraCheese.isSelected() == true)
            {
                topping = "Extra Cheese";
                extraprice = 2;
            
            }
         /* If the user checks the Pepperoni it will display the topping column as "Pepperoni" */
        else if(ChkBoxPepperoni.isSelected() == true)
            {
                topping = "Pepperoni";
                extraprice = 2;

            }
        /* If the user checks the Mushrooms it will display the topping column as "Mushrooms" */
        else if(ChkBoxMushrooms.isSelected() == true)
            {
                topping = "Mushrooms";
                extraprice = 2;

            }
        
        /* get the value of the quantity convert it to a string */
        int qty = Integer.parseInt(txtQty.getValue().toString());
        
        
        /* have the total equal to quantity * by the price */
        int total = qty * price + extraprice;
        
        
        /* Defining the jTable */
        model = (DefaultTableModel)jTable1.getModel();
        
        
        /* Adds a row when the user enters the qty and then the table will display the price, qty, and the total of it all */
        model.addRow(new Object []
        
        {
            item, 
            price,
            qty,
            total,
            topping        
        });
        
        /* Defining the sum */
        int sum = 0;
        
        
        /* For loop to get the total amount and display in the Text Field */
        for(int a = 0; a < jTable1.getRowCount(); a++)
        {
            sum = sum + Integer.parseInt(jTable1.getValueAt(a,3).toString());
        }
        
        txtTotal.setText(Integer.toString(sum));
    }                                      

    
    /* Remove the item from the table and change the total price */
    private void BtnRemoveActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        
        model.removeRow(jTable1.getSelectedRow());
        int sum = 0;
        for(int i = 0; i < jTable1.getRowCount(); i++)
        {
            sum = sum + Integer.parseInt(jTable1.getValueAt(i,3).toString());
        }
        
        txtTotal.setText(Integer.toString(sum));
                                         

    }                                         

    private void txtTotalActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    
    /* Print out the intput into a invoice */
    private void BtnPrintActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        
        int tot = Integer.parseInt(txtTotal.getText());
        int pay = Integer.parseInt(txtPay.getText());
        int balance = pay - tot;
        
        txtBalance.setText(String.valueOf(balance));
        
         /* Display a message notifying the user the order has been completed and submitted */
         JOptionPane.showMessageDialog(this, "Order is Completed");
        
    }                                        

